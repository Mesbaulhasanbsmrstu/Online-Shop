

@model Online_Shop.Models.Products
@{
    ViewData["title"] = "Delete";
}
<br />
<h2 class="text-info">Delete Product</h2>
<form asp-action="Delete" method="post" enctype="multipart/form-data">
    <div class="p-4 rounded border row">
       
        <div asp-validation-summary="ModelOnly" class="text-danger">

        </div>
       <div class="col-md-8">
            <div class="form-group row">
                <div class="col-2">
                    <label asp-for="Name"></label>
                </div>
                <div class="col-md-5">
                    <input type="hidden" asp-for="Id" />
                    <input asp-for="Name" readonly="readonly" class="form-control" />
                </div>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group row">
                <div class="col-2">
                    <label asp-for="Price"></label>
                </div>
                <div class="col-md-5">
                    <input asp-for="Price" readonly="readonly" class="form-control" />
                </div>
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>

           @*<div class="form-group row">
            <div class="col-2">
                <label asp-for="Image"></label>
            </div>
            <div class="col-md-5">
                <input   asp-for="Image" class="form-control" type="file" />
            </div>
            <span asp-validation-for="Image" class="text-danger"></span>
        </div>*@


        <div class="form-group row">

            <div class="col-2">

                <label asp-for="ProductColor"></label>
            </div>
            <div class="col-md-5">


                <input asp-for="ProductColor" readonly="readonly" class="form-control" />
            </div>
            <span asp-validation-for="ProductColor" class="text-danger"></span>
        </div>

            <div class="form-group row">
                <div class="col-2">
                    <label asp-for="ProductTypeId"></label>
                </div>
                <div class="col-md-5">

                    <input asp-for="ProductTypeId" readonly="readonly" class="form-control" />
                </div>
                <span asp-validation-for="ProductTypeId" class="text-danger"></span>
            </div>

            <div class="form-group row">
                <div class="col-2">
                    <label asp-for="SpecialTagId"></label>
                </div>
                <div class="col-md-5">

                    <input asp-for="SpecialTagId" readonly="readonly" class="form-control" />
                </div>
                <span asp-validation-for="SpecialTagId" class="text-danger"></span>
            </div>

            <div class="form-group row">
                <div class="col-md-2">
                    <label asp-for="IsAVailable"></label>
                </div>
                <div class="col-md-5">
                    <input asp-for="IsAVailable" disabled="disabled" class="" type="checkbox" />
                </div>
                <span asp-validation-for="IsAVailable" class="text-danger"></span>
            </div>
            <div class="form-group">
                <h3>Do You Want To Delete This Product?</h3>
                <input type="submit" asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger" value="Delete" />
                
                <a asp-action="Index" class="btn btn-success">Back to List</a>
            </div>
        </div>
 
            <div class="col-md-1"></div>
            <div class="col-md-3">
                <img src="~/@Model.Image" width="100%" style="border-radius:5px; border:1px solid #efefef" />
            </div>

        </div>
</form>

    @section Scripts{
        @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }



