@using Online_Shop.Models;
@model List<Products>
@{
    ViewData["Title"] = "Home Page";
}
</br></br>
<div class="row">
    @foreach (var product in Model)
    {

        
        <div class="col-md-3">

            <div class="card mb-4">
                <div class="card-header">
                    <h4 class="my-0 font-weight-normal">
                        <label style="font-size:15px; color:steelblue;">@product.Name</label>
                    </h4>
                    <img src="~/@product.Image" alt="Card Image" class="card-image-top" style="height:150px;width:200px" />



                </div>
                <br />
                <div class="card-header">

                    <div class="d-flex justify-content-between align-items-center">
                        <div class="btn-group">
                            <label style="font-size:15px; color:#a51313"><b>Price: @product.Price &nbsp</b></label>
                            <a asp-action="Details" asp-controller="Home" asp-route-id="@product.Id" class="btn btn-primary pull-right btn-outline-info">Details</a>
                        </div>
                    </div>
                </div>

            </div>
        </div>
       

    }
</div>




